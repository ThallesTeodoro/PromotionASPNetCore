@{
    ViewData["Title"] = "Episódios";
    ViewData["Controller"] = "Episode";
}
@section Header {
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Remover episódio</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
          <a asp-controller="Episode" asp-action="Index" class="btn btn-sm btn-primary">
            Voltar
            <svg class="bi bi-arrow-left-short" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.854 4.646a.5.5 0 010 .708L5.207 8l2.647 2.646a.5.5 0 01-.708.708l-3-3a.5.5 0 010-.708l3-3a.5.5 0 01.708 0z" clip-rule="evenodd"/><path fill-rule="evenodd" d="M4.5 8a.5.5 0 01.5-.5h6.5a.5.5 0 010 1H5a.5.5 0 01-.5-.5z" clip-rule="evenodd"/></svg>
          </a>
      </div>
  </div>
}

<h3>Tem certeza que deseja remover este episódio?</h3>
<dl class="row">
    <dt class = "col-sm-2">
        Name
    </dt>
    <dd class = "col-sm-10">
        @ViewBag.Episode.Title
    </dd>
    <dt class = "col-sm-2">
        Descrição
    </dt>
    <dd class = "col-sm-10">
        @ViewBag.Episode.Description
    </dd>
    <dt class = "col-sm-2">
        Imagem
    </dt>
    <dd class = "col-sm-10">
        <img width="100" src="~/uploads/@ViewBag.Episode.Image" style="display: block;"/>
    </dd>
    <dt class = "col-sm-2">
        Thumb
    </dt>
    <dd class = "col-sm-10">
        <img width="100" src="~/uploads/@ViewBag.Episode.Thumb" style="display: block;"/>
    </dd>
    <dt class = "col-sm-2">
        Url do vídeo
    </dt>
    <dd class = "col-sm-10">
        @ViewBag.Episode.VidelUrl
    </dd>
</dl>
<form asp-action="Remove" asp-controller="Episode" asp-route-id="@ViewBag.Episode.Id" method="POST">
    <button type="submit" class="btn btn-danger">Deletar</button> |
    <a asp-action="Index" asp-controller="Episode" class="btn btn-primary">Voltar</a>
</form>