@{
    ViewData["Title"] = "Usuários";
    ViewData["Controller"] = "User";
}
@section Header {
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Remover usuário</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
          <a asp-controller="User" asp-action="Index" class="btn btn-sm btn-primary">
            Voltar
            <svg class="bi bi-arrow-left-short" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.854 4.646a.5.5 0 010 .708L5.207 8l2.647 2.646a.5.5 0 01-.708.708l-3-3a.5.5 0 010-.708l3-3a.5.5 0 01.708 0z" clip-rule="evenodd"/><path fill-rule="evenodd" d="M4.5 8a.5.5 0 01.5-.5h6.5a.5.5 0 010 1H5a.5.5 0 01-.5-.5z" clip-rule="evenodd"/></svg>
          </a>
      </div>
  </div>
}

<h3>Tem certeza que deseja remover este usuário?</h3>
<dl class="row">
    <dt class = "col-sm-2">
        Name
    </dt>
    <dd class = "col-sm-10">
        @ViewBag.User.Name
    </dd>
    <dt class = "col-sm-2">
        Email
    </dt>
    <dd class = "col-sm-10">
        @ViewBag.User.Email
    </dd>
</dl>
<form asp-action="Remove" asp-controller="User" asp-route-id="@ViewBag.User.Id" method="POST">
    <button type="submit" class="btn btn-danger">Deletar</button> |
    <a asp-action="Index" asp-controller="User" class="btn btn-primary">Voltar</a>
</form>