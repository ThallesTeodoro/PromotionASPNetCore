@{
    ViewData["Title"] = "Participant";
}
<div class="container marketing">
    <div class="row featurette" id="about">
        <div class="col-md-7 order-md-2 mx-auto">
            <h2 class="featurette-heading">Dados do participante</h2>
            <hr>
            <p class="lead">
                <dl class="row">
                    <dt class = "col-sm-4">
                        Nome:
                    </dt>
                    <dd class = "col-sm-8">
                        @ViewBag.Participant.Name
                    </dd>
                    <dt class = "col-sm-4">
                        E-mail:
                    </dt>
                    <dd class = "col-sm-8">
                        @ViewBag.Participant.Email
                    </dd>
                    <dt class = "col-sm-4">
                        Data de nascimento:
                    </dt>
                    <dd class = "col-sm-8">
                        @ViewBag.Participant.Birthdate
                    </dd>
                    <dt class = "col-sm-4">
                        Genero:
                    </dt>
                    <dd class = "col-sm-8">
                        @ViewBag.Participant.Gender
                    </dd>
                </dl>
            </p>
            <p class="lead">
                <a class="btn btn-sm btn-primary text-light" asp-controller="Participant" asp-action="Edit">
                    <svg class="bi bi-pencil-square" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M15.502 1.94a.5.5 0 010 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 01.707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 00-.121.196l-.805 2.414a.25.25 0 00.316.316l2.414-.805a.5.5 0 00.196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 002.5 15h11a1.5 1.5 0 001.5-1.5v-6a.5.5 0 00-1 0v6a.5.5 0 01-.5.5h-11a.5.5 0 01-.5-.5v-11a.5.5 0 01.5-.5H9a.5.5 0 000-1H2.5A1.5 1.5 0 001 2.5v11z" clip-rule="evenodd"/></svg>
                    Editar dados
                </a>
            </p>
        </div>
    </div>
</div>