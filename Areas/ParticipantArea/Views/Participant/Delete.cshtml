@{
    ViewData["Title"] = "Participant";
}
<div class="container marketing">
    <div class="row featurette" id="about">
        <div class="col-md-7 order-md-2 mx-auto">
            <h2 class="featurette-heading">Dados do participante</h2>
            <hr>
            <p class="lead">
                <dl class="row">
                    <dt class = "col-sm-4">
                        Nome:
                    </dt>
                    <dd class = "col-sm-8">
                        @ViewBag.Participant.Name
                    </dd>
                    <dt class = "col-sm-4">
                        E-mail:
                    </dt>
                    <dd class = "col-sm-8">
                        @ViewBag.Participant.Email
                    </dd>
                    <dt class = "col-sm-4">
                        Data de nascimento:
                    </dt>
                    <dd class = "col-sm-8">
                        @ViewBag.Participant.Birthdate
                    </dd>
                    <dt class = "col-sm-4">
                        Genero:
                    </dt>
                    <dd class = "col-sm-8">
                        @ViewBag.Participant.Gender
                    </dd>
                </dl>
            </p>
            <p class="lead">
                <form asp-action="Remove" asp-controller="Participant" method="POST">
                    <button type="submit" class="btn btn-sm btn-danger text-light">
                        <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z"/><path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd"/></svg>
                        Exluir minha conta
                    </button> |
                    <a asp-action="Index" asp-controller="Participant" class="btn btn-primary">Voltar</a>
                </form>
            </p>
        </div>
    </div>
</div>